
[global]
  ### Display ###
  monitor = 0

  # Possible modes are: mouse/keyboard/none
  follow = none

  width = 300
  height = 200

  # Position the notification in the top right corner
  origin = top-right

  # Offset from the origin
  offset = 8x40

  # Scale factor. It is auto-detected if value is 0.
  scale = 0

  gaps = true
  gap_size = 10

  # Show how many messages are currently hidden (because of geometry).
  indicate_hidden = yes

  notification_limit = 4

  # Shrink window if it's smaller than the width.  Will be ignored if
  # width is 0.
  shrink = no

  # The transparency of the window. Range: [0; 100].
  transparency = 10

  # Draw a line of "separator_height" pixel height between two
  # notifications.
  # Set to 0 to disable.
  separator_height = 0

  # Vertical padding between text and separator
  padding = 8

  # Horizontal padding
  horizontal_padding = 8

  background = "#1E2127"
  foreground = "#FFFFFF"


  # Border width (set to 0 to disable)
  frame_width = 0
  frame_color = "#99999933"

  ### Progress bar ###
  highlight = "#FFFFFF99"

  # Turn on the progess bar. It appears when a progress hint is passed with
  # for example dunstify -h int:value:12
  progress_bar = true

  # Set the progress bar height. This includes the frame, so make sure
  # it's at least twice as big as the frame width.
  progress_bar_height = 6

  # Set the frame width of the progress bar
  progress_bar_frame_width = 0

  # Set the minimum width for the progress bar
  progress_bar_min_width = 196

  # Set the maximum width for the progress bar
  progress_bar_max_width = 384

  # Corner radius for the progress bar. 0 disables rounded corners.
  progress_bar_corner_radius = 2


  # Define a color for the separator.
  # possible values are:
  #  * auto: dunst tries to find a color fitting to the background;
  #  * foreground: use the same color as the foreground;
  #  * frame: use the same color as the frame;
  #  * anything else will be interpreted as a X color.
  separator_color = frame

  # Sort messages by urgency.
  sort = no

  # Don't remove messages, if the user is idle (no mouse or keyboard input)
  # for longer than idle_threshold seconds.
  # Set to 0 to disable.
  # Transient notifications ignore this setting.
  idle_threshold = 120

  ### Text ###

  font = System San Francisco Display 9

  # The spacing between lines.  If the height is smaller than the
  # font height, it will get raised to the font height.
  line_height = 0


  # The format of the message.  Possible variables are:
  #   %a  appname
  #   %s  summary
  #   %b  body
  #   %i  iconname (including its path)
  #   %I  iconname (without its path)
  #   %D  Duplicate notification count
  #   %A  Action indicator
  #   %U  URL indicator
  #   %p  progress value if set ([  0%] to [100%]) or nothing
  #   %n  progress value if set without any extra characters
  #   %%  Literal %

  markup = full
  format = "<b>%a</b>%A%U\n%s\n%b\n%p"

  # Alignment of text
  alignment = left

  # Vertical alignment of text and icon
  vertical_alignment = top

  # Show age of message if message is older than show_age_threshold
  # seconds.
  # Set to -1 to disable.
  show_age_threshold = 60

  # Split notifications into multiple lines if they don't fit into
  # geometry.
  word_wrap = yes

  # When word_wrap is set to no, specify where to ellipsize long lines.
  # Possible values are "start", "middle" and "end".
  ellipsize = middle

  # Ignore newlines '\n' in notifications.
  ignore_newline = no

  # Merge multiple notifications with the same content
  stack_duplicates = true

  # Hide the count of merged notifications with the same content
  hide_duplicate_count = true

  # Display indicators for URLs (U) and actions (A).
  show_indicators = no

  # Custom indicators
  action_indicator = "ðŸŸ…"
  url_indicator = "ðŸ”—"

  # Nifty corners
  corner_radius = 7

  ### Icons ###

  # Align icons left/right/off
  icon_position = left

  icon_corner_radius = 2

  # Scale larger icons down to this size, set to 0 to disable
  min_icon_size = 64
  max_icon_size = 64

  # Paths to default icons.
  icon_path = /usr/share/icons/WhiteSur-dark/status/24/:/usr/share/icons/WhiteSur-dark/apps/scalable:/usr/share/icons/WhiteSur-dark/devices/scalable/:/usr/share/icons/gnome/16x16/status/

  ### History ###

  # Should a notification popped up from history be sticky or timeout
  # as if it would normally do.
  sticky_history = yes

  # Maximum amount of notifications kept in history
  history_length = 20

  ### Misc/Advanced ###

  # dmenu path.
  dmenu = /usr/bin/dmenu -p dunst:

  # Browser for opening urls in context menu.
  browser = /usr/bin/firefox -new-tab

  # Always run rule-defined scripts, even if the notification is suppressed
  always_run_script = true

  # Define the title and class of the windows spawned by dunst
  title = Dunst
  class = Dunst

  mouse_left_click = do_action, close_current
  mouse_middle_click = close_current
  # ToDo: change mouse_right_click to "context" and use rofi or something better to handle it
  mouse_right_click = close_current


# [urgency_low]
#   alignment = left
#
# [urgency_normal]
#   alignment = left

[urgency_critical]
  background = "#900000"
  foreground = "#ffffff"
  frame_color = "#ff0000"
  timeout = 0

[dunss]
  appname = dunst
  background = "#006600"

[overflow]
  summary = "* more)"
  alignment = center
  foreground = "#FF00FF"

[browser]
  appname = Firefox
  format = "<span size='8pt' line_height='0.5'>%a %A%U</span>\n<b><span color='#FFFFFF' size='135%%' line_height='0.75'>%s</span></b>\n%b"

[browser-emails]
  appname = Firefox
  summary = "New email received"
  timeout = 0

[volume]
  appname = pasystray
  timeout = 1
  foreground = "#6D6F6F"
  format = "<b><span color='#FFFFFF' size='135%%'>Volume</span></b>\n%s"

[volume-inputs]
  appname = pasystray
  summary = "input *"
  format = "<span size='135%%'><b><span color='#FFFFFF'>Volume</span></b> %p</span>"
  min_icon_size = 24
  max_icon_size = 24

[volume-spotify]
  appname = pasystray
  summary = "input Spotify *"
  highlight = "#1ED760"

[volume-vlc]
  appname = pasystray
  summary = "input VLC *"
  highlight = "#F07000"
